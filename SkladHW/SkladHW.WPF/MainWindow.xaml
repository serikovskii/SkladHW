<Window x:Class="SkladHW.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkladHW.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-0.4,0">
        <StackPanel>
            <Grid Height="100" >
                <TextBlock FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center">Склад магазина</TextBlock>
            </Grid>
            <Grid Height="70" >
                <Button Height="70" Width="200" Content="Добавить товар" FontSize="25" IsDefault="True" Click="AddProduct"></Button>
            </Grid>
            <Grid Height="20" ></Grid>
            <Grid Height="70" >
                <Button Height="70" Width="200" Content="Изменить товар" FontSize="25" IsDefault="True" Click="UpdateProduct"></Button>
            </Grid>
            <Grid Height="20" ></Grid>
            <Grid Height="70" >
                <Button Height="70" Width="200" Content="Удалить товар" FontSize="25" IsDefault="True" Click="DeleteProduct"></Button>
            </Grid>
            <Grid Height="20" ></Grid>
        </StackPanel>
    </Grid>
</Window>
